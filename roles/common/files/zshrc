# Use emacs keybindings (Ctrl-A, Ctrl-E, etc.)
bindkey -e

autoload -Uz compinit && compinit
autoload -U +X bashcompinit && bashcompinit

export EDITOR=vim

if [ -f "/opt/homebrew/bin/brew" ]; then
  eval $(/opt/homebrew/bin/brew shellenv)
fi

if [ -d "$(brew --prefix gnu-sed)/libexec/gnubin" ]; then
  export PATH="$(brew --prefix gnu-sed)/libexec/gnubin:$PATH"
fi

if [ -d "$(brew --prefix gnu-tar)/libexec/gnubin" ]; then
  export PATH="$(brew --prefix gnu-tar)/libexec/gnubin:$PATH"
fi

export GOPATH="$HOME/go"
if [ -d "$HOME/go/bin" ]; then
  export PATH="$HOME/go/bin:$PATH"
fi

if [ -d "$HOME/.local/bin" ]; then
  export PATH="$HOME/.local/bin:$PATH"
fi

alias g='cd $(ghq root)/$(ghq list | fzf)'
alias k=kubectl

source <(kubectl completion zsh)
compdef __start_kubectl k

# The next line makes PATH unique.
typeset -U path PATH

# fzf key bindings (Ctrl-R for history search) and completion
source <(fzf --zsh)

eval "$(starship init zsh)"
